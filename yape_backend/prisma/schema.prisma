generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Transaction {
  id                      String             @id @default(uuid())
  accountExternalIdDebit  String             @default(uuid())
  accountExternalIdCredit String             @default(uuid())
  tranferTypeId           Int?
  tranferType             TransferType?      @relation(fields: [tranferTypeId], references: [id])
  transactionStatusId     Int?               @default(1)
  transactionStatus       TransactionStatus? @relation(fields: [transactionStatusId], references: [id])
  value                   Int
  createdAt               DateTime           @default(now())
  updatedAt               DateTime           @updatedAt
}

model TransferType {
  id           Int           @id @default(autoincrement())
  name         String
  description  String?
  transactions Transaction[]
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
}

model TransactionStatus {
  id           Int           @id @default(autoincrement())
  name         String
  description  String?
  transactions Transaction[]
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
}